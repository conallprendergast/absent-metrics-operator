{
  "extends": [
    "config:base",
    "default:pinDigestsDisabled",
    "docker:enableMajor",
    "regexManagers:dockerfileVersions"
  ],
  "github-actions": {
    "enabled": false
  },
  "assignees": ["talal"],
  "constraints": {
    "go": "1.17"
  },
  "postUpdateOptions": ["gomodTidy1.17", "gomodUpdateImportPaths"],
  "packageRules": [
    {
      "matchPackageNames": ["github.com/prometheus/prometheus"],
      "allowedVersions": "0.35.x"
    },
    {
      "matchPackagePrefixes": ["k8s.io/"],
      "allowedVersions": "<0.23"
    },
    {
      "matchPackageNames": ["sigs.k8s.io/controller-runtime"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackageNames": ["golang"],
      "allowedVersions": "1.17.x"
    },
    {
      "matchPackagePrefixes": [
        "github.com/sapcc/go-api-declarations",
        "github.com/sapcc/gophercloud-sapcc",
        "github.com/sapcc/go-bits"
      ],
      "automerge": true
    }
  ],
  "prHourlyLimit": 0,
  "semanticCommits": "disabled"
}
