{
  "extends": [
    "config:base",
    "default:pinDigestsDisabled"
  ],
  "assignees": [
    "talal",
    "majewsky"
  ],
  "constraints": {
    "go": "1.18"
  },
  "postUpdateOptions": [
    "gomodTidy",
    "gomodUpdateImportPaths"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "golang"
      ],
      "allowedVersions": "1.18.x"
    },
    {
      "matchDepTypes": [
        "action",
        "dockerfile"
      ],
      "enabled": false
    },
    {
      "matchPackagePrefixes": [
        "k8s.io/"
      ],
      "allowedVersions": "0.22.x"
    },
    {
      "matchPackagePrefixes": [
        "github.com/sapcc/go-api-declarations"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "github.com/prometheus/prometheus"
      ],
      "allowedVersions": "0.35.x"
    },
    {
      "matchPackageNames": [
        "sigs.k8s.io/controller-runtime"
      ],
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "enabled": false
    }
  ],
  "prHourlyLimit": 0,
  "semanticCommits": "disabled"
}
